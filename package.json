{
  "name": "super-light-web-whatsapp-api-server",
  "version": "1.0.0",
  "description": "A super lightweight web server for WhatsApp API using @whiskeysockets/baileys",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev:backend": "nodemon",
    "dev:frontend": "cd frontend && npm run dev -- -p 3005",
    "dev": "concurrently -k \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "test": "jest",
    "start-production": "npm run start:prod",
    "start:prod": "node -r dotenv/config index.js"
  },
  "author": "Alucard0x1",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^1.20.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csv-parse": "^5.6.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.7",
    "express": "^4.22.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.2",
    "helmet": "^8.0.0",
    "multer": "^2.0.0",
    "pino": "^9.5.0",
    "qrcode": "^1.5.4",
    "sanitize-html": "^2.17.0",
    "session-file-store": "^1.5.0",
    "svix": "^1.84.1",
    "validator": "^13.15.22",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "bcrypt": "^6.0.0"
  },
  "devDependencies": {
    "axios-cookiejar-support": "^6.0.5",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.9",
    "qrcode-terminal": "^0.12.0",
    "tough-cookie": "^6.0.0",
    "uuid": "^13.0.0"
  }
}
